<%= simple_form_for(@forum) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <p>Forum Name:<br /><%= f.text_field :name, :size => 40 -%></p>
    <p>Description:<br /><%= f.text_area :description, :rows => 4, :cols => 60 -%></p>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
