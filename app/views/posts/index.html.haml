%h2= @topic.name
%h3
  = link_to 'Forums', forums_path
  = link_to @topic.forum.name, forum_path(@topic.forum)
  = @topic.name
%p
  - if current_user
    = link_to 'Post Reply', new_post_path(:forum_id => @topic.forum,:topic_id => @topic)
  - else
    = link_to 'Login to post a reply', :controller => 'account',:action => 'login'
%table#posts
  %tr
    %th.author
      Author
    %th.post
      Message
- @posts.each do |post|
  %tr{ :class=>"#{cycle('odd', 'even')}"}
    %td.author
      = link_to post.user.username, user_path(post.user)
      %br
      %small
        Member since
        = post.user.created_at.to_s(:short)
        %br
     = pluralize(post.user.posts_count, 'post')
- if current_user and current_user.has_role?('Moderator')
  %br
  %small
    = link_to 'Edit', edit_post_path(:id => post,:topic_id => @topic, :forum_id => @topic.forum)
  %br
  = link_to 'Delete', post_path(:id => post, :topic_id => @topic,:forum_id => @topic.forum), :method => :delete,
    :confirm => 'Are you sure you wish to delete this post?'
  %td.post
    = textilize(post.body)
= paginate @posts